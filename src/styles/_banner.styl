@import './variables.styl'

.banner 
  align-items: center;
  background: linear-gradient(
              rgba(darken($primaryColor, 80%), 90%),
              rgba(darken($primaryColor, 80%), 90%)),
              url('../assets/banner.png') center center no-repeat;
  display: flex;
  left: 0;
  position: fixed;
  top: 0;
  height: 100vh;
  width: 100%;
  z-index: 1;

@media screen and (max-width: 700px) 
  .banner
    display: block;
    position: relative;
    width: 100%;